@model Film
<div class="row">
    <div class="col-md-3">
        @*@Html.Partial("_menu",Model.Categories)*@ 
        @*@Html.Partial("_menu", Model)*@
       @await Component.InvokeAsync("CategoryMenu")
    </div> 
    <div class="col-md-9"> 
        <div class="card mb-3"> 
            <div class="card-body"> 
                <div class="row no-gutter">
                    <div class="col-md-4">
                        <img src="@Model.afisUrl" alt="@Model.konusu" class="card-img" />
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.filmId"> @Model.filmAd   </a>
                        </h5>
                        <p class="card-text"> @Html.Raw(Model.yonetmenAd)</p>
                        <p class="card-text">
                            <small class="text-muted"> 3 days ago</small>
                        </p>
                        <div>
                            <video width="425" height="250" controls>
                                <source src="~/videos/iftarlik_gazoz.mp4" type="video/mp4">
                                <source src="movie.ogg" type="video/ogg">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </div>
                </div>
             </div> 
        </div> 
    </div>
    
</div>


 