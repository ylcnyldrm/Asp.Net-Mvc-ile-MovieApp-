@model IEnumerable<Category>

    <div class="list-group">
        <a href="/"  class="list-group-item list-group-item-action"> Tüm Kategoriler</a>

        @foreach (var item in Model)
        { 
            <a asp-controller="home" asp-action="Index"  asp-route-name="@item.Name"  
               class="list-group-item list-group-item-action  @(ViewBag.SelectedCategory==item.Name.ToString()?"active":"")"> @item.Name </a>
        }
    </div>